---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Ashren's 404" description="Ashren's page for lost and confused people">
  <section class="text-center py-30 max-w-3xl mx-auto">
    <h1 class="text-heading text-8xl font-bold mb-4">404</h1>
    <p class="text-muted text-xl">No such file or directory</p>
    <p class="mt-8">
      <a href="/" class="bg-accent text-header rounded-lg hover:bg-highlight px-10 py-3">Return /home</a>
    </p>
  </section>
</BaseLayout>
